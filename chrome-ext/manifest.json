{
  "manifest_version": 3,
  "name": "ChatGPT Code Snippet Download",
  "version": "1.0",
  "description": "Enhance code snippet functionality by adding a 'Create File' button.",
  "icons": {
    "16": "icons/icon48.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  },
  "permissions": [
  "activeTab", 
  "downloads"
],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

